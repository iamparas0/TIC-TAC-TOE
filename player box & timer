<script>
    let timer = 10;
let timerElement = document.getElementById('timer');

setInterval(() => {
  timer--;
  timerElement.textContent = timer;
  if (timer <= 0) {
    timer = 10; // reset timer to 10 seconds
  }
}, 1000);
</script>
